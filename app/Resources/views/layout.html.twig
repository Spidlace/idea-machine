{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Idea Machine{% endblock %}</title>
</head>

<body>
    <header>
        <div class="wrap">
            <a href="{{ path('am_idea_machine_home') }}" class="logo" title="Page d'accueil"><h1>Idea Machine !</h1></a>
        </div>
    </header>

    <div id="wrapper">
        {% block body %}
        {% endblock %}
    </div>


    <footer>
        <div class="wrap">
            {{ render(controller("AMIdeaMachineBundle:Idea:menuFooter")) }}
        </div>
    </footer>
</body>
</html>